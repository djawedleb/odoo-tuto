<?xml version="1.0"?>
<odoo>

    <!--list view-->
    <record id="view_yourmodel_tree" model="ir.ui.view">
    <field name="name">estate.property.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <!-- Form view   -->
    <record id="view_yourmodel_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="sold_property" type="object" string="Sold" class="oe_highlight"/>
                    <button name="cancel_property" type="object" string="Cancel" class="oe_link"/>
                </header>
            <sheet>
                <group>
                    <h1>
                        <field name="name" placeholder="Property Name"/>
                    </h1>

                     <group>
                        <field name="expected_price"/>
                         <field name="selling_price"/>
                         <field name="best_price"/>
                     </group>
                    <group>
                        <field name="state" />
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="property_type_id"/>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                    </group>
                 </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                             <field name="facades"/>
                        </group>
                        <group>
                            <field name="garden_orientation"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="total_area"/>
                        </group>
                    </page>
                    <page string="Offers">
                        <group>
                           <field name="offer_ids">
                                <tree string="Offers">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="status"/>
                                    <button name="accept_offer" string="Accept" type="object" icon="fa-check" states="draft"/>
                                    <button name="refuse_offer" string="Refuse" type="object" icon="fa-times" states="draft"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="otherInfo">
                        <group>
                            <field name="user_id"/>
                            <field name="buyer_id"/>
                        </group>
                    </page>

                </notebook>

            </sheet>
            </form>
        </field>
    </record>


    <!--    Search view-->
    <record id="view_yourmodel_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="postcode"/>
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="expected_price"/>
            <filter name="available" string="inactive" domain="[('active','=','False')]"/>
            <group expand="0" string="Group By">
                <filter name="postcode" string="PostCode" context="{'group_by':'postcode'}"/>
            </group>
        </search>
        </field>
    </record>
    <!--Actions-->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new lost reason
          </p><p>
            Use lost reasons to explain why an opportunity is lost.
          </p><p>
            Some examples of lost reasons: "We don't have people/skill", "Price too high"
          </p>
        </field>
    </record>

    <!-- Menus -->
   <menuitem id="estate_menu_root"
          name="Real Estate"
          sequence="10"/>

<!-- Advertisements -->
<menuitem id="estate_menu_advertisements"
          name="Advertisements"
          parent="estate_menu_root"
          sequence="10"/>

<menuitem id="estate_menu_estate_property"
          name="Estate Properties"
          parent="estate_menu_advertisements"
          action="action_estate_property"
          sequence="10"/>



</odoo>
